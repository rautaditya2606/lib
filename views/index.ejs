<%- include('partials/header') %>
<div class="container my-5">
  <div class="text-center mb-5">
    <h1 class="display-4 fw-bold">
      <i class="fas fa-book-open text-primary me-3"></i>
      Library Management System
    </h1>
    <p class="lead text-muted">Your gateway to knowledge and learning resources</p>
  </div>

  <% if (user) { %>
    <div class="card shadow-sm mb-4">
      <div class="card-body">
        <div class="d-flex align-items-center">
          <div class="avatar-circle bg-primary text-white me-3">
            <i class="fas <%= user.role === 'librarian' ? 'fa-user-tie' : 'fa-user-graduate' %> fa-2x"></i>
          </div>
          <div>
            <h2 class="h4 mb-1">Welcome, <%= user.name %>!</h2>
            <p class="text-muted mb-0">
              <%= user.role === 'librarian' ? 'Librarian Access' : `Student ID: ${user.studentId}` %>
            </p>
          </div>
        </div>
      </div>
    </div>

    <div class="row g-4">
      <div class="col-md-4">
        <div class="card shadow-sm h-100">
          <div class="card-body text-center">
            <i class="fas fa-book fa-3x text-primary mb-3"></i>
            <h3 class="h5">Browse Books</h3>
            <p class="text-muted">Explore our collection of books</p>
            <a href="/books/available" class="btn btn-outline-primary">View Books</a>
          </div>
        </div>
      </div>

      <% if (user.role === 'student') { %>
        <div class="col-md-4">
          <div class="card shadow-sm h-100">
            <div class="card-body text-center">
              <i class="fas fa-bookmark fa-3x text-warning mb-3"></i>
              <h3 class="h5">My Books</h3>
              <p class="text-muted">View your borrowed books</p>
              <a href="/books/mybooks" class="btn btn-outline-warning">View My Books</a>
            </div>
          </div>
        </div>
      <% } %>

      <% if (user.role === 'librarian') { %>
        <div class="col-md-4">
          <div class="card shadow-sm h-100">
            <div class="card-body text-center">
              <i class="fas fa-exchange-alt fa-3x text-success mb-3"></i>
              <h3 class="h5">Issue/Return</h3>
              <p class="text-muted">Manage book transactions</p>
              <div class="btn-group">
                <a href="/books/issue" class="btn btn-outline-success">Issue</a>
                <a href="/books/return" class="btn btn-outline-success">Return</a>
              </div>
            </div>
          </div>
        </div>
      <% } %>

      <!-- <div class="col-md-4">
        <div class="card shadow-sm h-100">
          <div class="card-body text-center">
            <i class="fas fa-search fa-3x text-info mb-3"></i>
            <h3 class="h5">Search</h3>
            <p class="text-muted">Find books by title or author</p>
            <a href="/books/search" class="btn btn-outline-info">Search Books</a>
          </div>
        </div>
      </div> -->
    </div>
  <% } else { %>
    <div class="row justify-content-center">
      <div class="col-md-6 text-center">
        <div class="card shadow-sm">
          <div class="card-body py-5">
            <i class="fas fa-sign-in-alt fa-4x text-primary mb-4"></i>
            <h2 class="h4 mb-3">Access the Library System</h2>
            <p class="text-muted mb-4">Please login to start borrowing books</p>
            <div class="d-grid gap-2 col-6 mx-auto">
              <a href="/login" class="btn btn-primary">
                <i class="fas fa-sign-in-alt me-2"></i>Login
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% } %>
</div>

<style>
.avatar-circle {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}
</style>
<%- include('partials/footer') %>
