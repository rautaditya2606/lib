<%- include('../partials/header') %>
<div class="container my-5">
  <div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h2 class="h5 mb-0">Email Reminder Test Results</h2>
      <span class="badge bg-primary"><%= results.length %> Tests</span>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th>Status</th>
              <th>Book</th>
              <th>User</th>
              <th>Email</th>
              <th>Message</th>
            </tr>
          </thead>
          <tbody>
            <% results.forEach(result => { %>
              <tr>
                <td>
                  <% if (result.success) { %>
                    <span class="badge bg-success">Success</span>
                  <% } else { %>
                    <span class="badge bg-danger">Failed</span>
                  <% } %>
                </td>
                <td><%= result.book %></td>
                <td><%= result.user %></td>
                <td><%= result.email %></td>
                <td>
                  <% if (!result.success) { %>
                    <span class="text-danger"><%= result.error %></span>
                  <% } else { %>
                    <span class="text-success">Email sent successfully</span>
                  <% } %>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<%- include('../partials/footer') %>
